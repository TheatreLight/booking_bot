@model WebApplication_Vitalik.Models.Subject

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutInternal";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NameSubject" class="control-label"></label>
                <input asp-for="NameSubject" maxlength="50" class="form-control" />
                <span asp-validation-for="NameSubject" class="text-danger"></span>
                <label asp-for="Level" class="control-label"></label>
                <input asp-for="Level" class="form-control" />
                <label asp-for="NumberRoom" class="control-label"></label>
                <input asp-for="NumberRoom" class="form-control" />
                <span asp-validation-for="Level" class="text-danger"></span>
                <label asp-for="Campus" class="control-label"></label>
                <select asp-for="Campus" class="form-control">
                    <option value="1">Novosibirsk</option>
                    <option value="2">Moskow</option>
                    <option value="3">Kazan</option>
                </select>
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" maxlength="100" class="form-control" />
                <label asp-for="MinTime" class="control-label"></label>
                <input asp-for="MinTime" class="form-control" />
                <label asp-for="Block" class="control-label"></label>
                <input type="checkbox" asp-for="Block" /><br/>
                <label asp-for="Type" class="control-label"></label>
                <input type="number" asp-for="Type" /><br/>
                <label asp-for="securType" class="control-label"></label>
                <input type="number" asp-for="securType" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

