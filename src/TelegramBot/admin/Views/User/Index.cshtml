@model IEnumerable<WebApplication_Vitalik.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutInternal";
}

<h2>Список пользователей</h2>
<p><a asp-action="Create">Добавить пользователя</a></p>
<table class="table table-striped table-bordered table-hover">
    <tr><th>Логин</th><th>Имя</th><th>Кампус</th><th>Роль</th><th>Бан</th><th></th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserLogin</td>
            <td>@item.UserName</td>
            <td>@item.Campus</td>
            <td>@item.Role</td>
            <td>@item.Block</td>
            <td>
                <a class="btn btn-default" asp-action="Edit" asp-controller="User" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                <form asp-controller="User" asp-action="Delete" method="post" asp-route-id="@item.Id">
                    <input class="btn btn-danger" type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>